{% extends 'base.html.twig' %}

{% block title %}VIBE | Votre commande{% endblock %}

{% block body %}
    <main class="confirmation_wrapper">
        <form class="confirmation_form" action="{# path('') #}" method="post">
            <div class="strong">
                <strong >Livraison</strong>
            </div>
            <div class="names">
                <div>
                    <label for="first_name">Prénom</label>
                    <input type="text" name="first_name" placeholder="John" required>
                </div>
                <div>
                    <label for="last_name">Nom</label>
                    <input type="text" name="last_name" placeholder="Doe" required>
                </div>
            </div>

            <label for="address">Addresse</label>
            <input type="text" name="address" placeholder="10 Rue de la paix" required>

            <div class="cities">
                <div>
                    <label for="city">Ville</label>
                    <input type="text" name="city" placeholder="Paris" required>
                </div>

                <div>
                    <label for="postalCode">Code postal</label>
                    <input type="text" name="postalCode" placeholder="75000" required>
                </div>
            </div>

            <div class="strong">
                <strong >Paiement</strong>
            </div>
            <label for="owner">Titulaire</label>
            <input type="text" name="owner" placeholder="John Doe" required>

            <div class="card_num">
                <div>
                    <label for="cardnum">Numéro de la carte</label>
                    <input type="number" name="cardnum" placeholder="XXXX XXXX XXXX XXXX" required>
                </div>
                <div>
                    <label for="cryptogram">Cryptogramme</label>
                    <input type="number" name="cryptogram" placeholder="000" required>
                </div>
            </div>

            <label for="expdate">Date d'expiration</label>
            <input type="number" name="expdate" placeholder="00/00" required>
        </form>
        <section class="cart_resume">
            <div class="strong">
                <strong >Récapitulatif de votre commande</strong>
            </div>
            <div class="resume_articles">

            </div>
            <div class="resume_total">

            </div>
                <a href="#" class="confirm_payment">
                    Valider la commande
                </a>
        </section>
    </main>
{% endblock %}