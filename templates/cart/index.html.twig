{% extends 'base.html.twig' %}

{% block title %}VIBE | Votre panier{% endblock %}

{% block body %}
    <main class="cart_wrapper">
        <section class="cart_articles_section">
            <div class="cart_recap_container">
                <strong class="cart_recap">Récapitulatif</strong>
                <div class="empty_cart">
                    <span><img src="{{ asset('assets/trash-outline.svg') }}" alt="icône de poubelle"> Vider le panier</span>
                </div>
            </div>
            <div class="cart_divider"></div>
        </section>
        <section class="cart_total_wrapper">
            <div class="cart_divider"></div>
            <strong>Total: <span class="total"></span><span>€</span></strong>
            <div class="cart_divider"></div>
            <a class="cart_checkout" href="{{ path('cart_confirm') }}">Paiement</a>
        </section>
        <a class="cart_checkout" href="{{ path('cart_confirm') }}">Paiement</a>
        <section class="cart_is_empty">
            <img src="{{ asset('assets/cart.svg') }}" alt="icône de panier">
            <h1>Oups, on dirait que vous n'avez rien ajouté à votre panier. </h1>
            <a href="{{ path('app_home') }}">Voir les évènements disponibles</a>
        </section>
    </main>
{% endblock %}
