{% extends 'base.html.twig' %}

{% block title %}VIBE{% endblock %}

{% block body %}
    <div class="marquee_wrapper">
        <div class="marquee_container">
            <span class="marquee_item"></span>
            <span class="marquee_item"></span>
        </div>
    </div>
    <section class="events_section">
        {% for event in events %}

            <div class="event_container">
                <div class="event_cover">
                    <a href={{ path('event_page', {'event':event.id}) }}>
                        <img src="{{ asset('events/' ~event.cover) }}" alt="affiche {{ event.title }}">
                    </a>
                </div>
                <div class="event_price_category">
                    <span><img class="icon" src="{{ asset('assets/pricetag.svg') }}"> {{ event.price }}â‚¬</span><span>{{ event.category.name }}</span>
                </div>
                <div class="event_infos">
                    <a href={{ path('event_page', {'event':event.id}) }}>
                        <strong class="event_title">{{ event.title }}</strong>
                        <span class="event_date"><img class="icon" src="{{ asset('assets/calendar.svg') }}"> {{ event.__toString() }}</span>
                        <span class="event_location"><img class="icon" src="{{ asset('assets/location.svg') }}">{{ event.location.name }}</span>
                    </a>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}
