{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(registrationForm, {'attr': {'class': 'connexion_form'}}) }}
        <h1 class="connexion_heading">S'inscrire</h1>
        <div class="connexion_form_container">
            {{ form_row(registrationForm.email, {
                'attr': {'class': 'connexion_form_row register'},
                placeholder: 'johndoe@exemple.com'
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe',
                placeholder: 'Au moins 6 caract√®res',
                'attr': {'class': 'connexion_form_row register'}
            }) }}
            <div class="connexion_terms">
                {{ form_row(registrationForm.agreeTerms,
                    {
                        label: "Accepter les conditions d'utilisation",
                }) }}
            </div>
            <button type="submit" class="connexion_cta">Inscription</button>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}
